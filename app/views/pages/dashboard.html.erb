<div class="page-header">
	<div class="row">
	  <div class="col-md-6">
	  	<h1>Projects</h1>
	  </div>
	  <div class="col-md-6">
	  	<%= link_to "New Project", new_project_path, class: "btn btn-warning btn-lg pull-right margintop" %>
	  </div>
	</div>
</div>

<div class="row">
	<div class="col-md-4">
		<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">TO-DO</h3>
      </div>
      <div class="panel-body">
				<%= render @to_do %>
			</div>
    </div>
	</div>

	<div class="col-md-4">
		<div class="panel panel-primary">
	    <div class="panel-heading">
	      <h3 class="panel-title">DOING</h3>
	    </div>
	    <div class="panel-body">
				<%= render @doing %>
			</div>
	  </div>
	</div>

	<div class="col-md-4">
		<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">DONE</h3>
      </div>
      <div class="panel-body">
				<%= render @done %>
			</div>
    </div>
	</div>
</div>

<div class="page-header">
	<div class="row">
	  <div class="col-md-6">
	  	<h2>Tasks</h2>
	  	<p>What are you doing to finish your projects?</p>
	  </div>
	  <div class="col-md-6">
	  	<%= link_to "New Task", new_task_path, class: "btn btn-warning pull-right margintop" %>
	  </div>
	</div>
</div>
<div id="calendar">
	<%= calendar_for(@tasks) do |t| %>
		<%= t.head('SUN','MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT') %>
			<%= t.day do |day, tasks| %>
				<%= day.day %><br>
				<% tasks.each do |task| %>
				<%= link_to h(task.title), edit_task_path(task) %><br>
			<% end %>
		<% end %>
	<% end %>
</div>

<i class='fa fa-arrow-left'></i>
<div class="page-header">
	<div class="row">
	  <div class="col-md-6">
	  	<h1>Projects</h1>
	  </div>
	  <div class="col-md-6">
	  	<%= link_to "New Project", new_project_path, class: "btn btn-success btn-lg pull-right margintop" %>
	  </div>
	</div>
</div>

<div class="row">
	<div class="col-md-4">
		<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">To-Do</h3>
      </div>
      <div class="panel-body">
      	<ul>
	        <% @projects.each do |project| %>
	        	<% if project.situation == "To-Do" %>
	        		<li><%= link_to project.title, edit_project_path(project) %></li>
	        	<% end %>
	   			<% end %>
	   		</ul>
      </div>
    </div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Doing</h3>
      </div>
      <div class="panel-body">
        <ul>
	        <% @projects.each do |project| %>
	        	<% if project.situation == "Doing" %>
	        		<li><%= link_to project.title, edit_project_path(project) %></li>
	        	<% end %>
	   			<% end %>
	   		</ul>
      </div>
    </div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Done</h3>
      </div>
      <div class="panel-body">
        <ul>
	        <% @projects.each do |project| %>
	        	<% if project.situation == "Done" %>
	        		<li><%= link_to project.title, edit_project_path(project) %></li>
	        	<% end %>
	   			<% end %>
	   		</ul>
      </div>
    </div>
	</div>
</div>

<div class="page-header">
	<div class="row">
	  <div class="col-md-6">
	  	<h2>Tasks</h2>
	  	<p>What are you doing to finish your projects?</p>
	  </div>
	  <div class="col-md-6">
	  	<%= link_to "New Task", new_task_path, class: "btn btn-warning pull-right margintop" %>
	  </div>
	</div>
</div>
<div id="calendar">
	<%= calendar_for(@tasks) do |t| %>
		<%= t.head('DOM','SEG', 'TER', 'QUA', 'QUI', 'SEX', 'SAB') %>
			<%= t.day do |day, tasks| %>
				<%= day.day %>
				<% tasks.each do |task| %>
				<%= h(task.title) %>
			<% end %>
		<% end %>
	<% end %>
</div>